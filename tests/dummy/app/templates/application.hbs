<p>
  This page is designed to imitate various complicated use cases: fixed position, scrollable inside scrollable, relative parent, etc.
</p>

<div class="scrollable">


  <div class="fixed">
    <p>
      {{scroll-to
        label      = "Scroll left column to 20"
        tagName    = "button"
        target     = "#left-20"
        scrollable = ".scrollable-left"
        class      = "button-left-20"
      }}
    </p>

    <p>
      {{scroll-to
        label="Scroll left column to 80"
        tagName   = "button"
        target    = "#left-80"
        scrollable = ".scrollable-left"
        class      = "button-left-80"
      }}
    </p>

    <br>

    <p>
      {{scroll-to
        label           = "Scroll right column to 20"
        tagName         = "button"
        target          = "#right-20"
        scrollable      = ".scrollable-right"
        class           = "button-right-20"
        cacheTarget     = false
        cacheScrollable = false
      }}
    </p>

    <p>
      {{scroll-to
        label           = "Scroll right column to 80"
        tagName         = "button"
        target          = "#right-80"
        scrollable      = ".scrollable-right"
        class           = "button-right-80"
        cacheTarget     = false
        cacheScrollable = false
      }}
    </p>

    <br>

    <p>
      {{scroll-to
        label     = "Scroll body to 20"
        tagName   = "button"
        target    = "#body-20"
        class     = "button-body-20"
      }}
    </p>

    <p>
      {{scroll-to
        label="Scroll body to 80"
        tagName   = "button"
        target    = "#body-80"
        class     = "button-body-80"
      }}
    </p>
  </div><!-- fixed -->


  <div class="fixed scrollable scrollable-left">
    {{#each (range 10) as |i|}}
      <div id="{{plus "left-group-" i}}" class="group">
        {{#each (range 10) as |k|}}
          <p id={{plus "left-" (plus (times i 10) k)}}>
            {{plus (times i 10) k}}
          </p>
        {{/each}}
      </div>
    {{/each}}
  </div>


  <div class="scrollable-right-parent">
    <div class="scrollable scrollable-right">
      {{#each (range 10) as |i|}}
        <div id="{{plus "right-group-" i}}" class="group">
          {{#each (range 10) as |k|}}
            <p id={{plus "right-" (plus (times i 10) k)}}>
              {{plus (times i 10) k}}
            </p>
          {{/each}}
        </div>
      {{/each}}
    </div>
  </div>

</div>


<div class="scrollable scrollable-body">
  {{#each (range 10) as |i|}}
    <div id="{{plus "body-group-" i}}" class="group">
      {{#each (range 10) as |k|}}
        <p id={{plus "body-" (plus (times i 10) k)}}>
          {{plus (times i 10) k}}
        </p>
      {{/each}}
    </div>
  {{/each}}
</div>